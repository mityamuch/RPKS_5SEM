<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:num="clr-namespace:Muhanov.Wpf.Controls"
                    >

    <Style TargetType="{x:Type num:NumericUpDown}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type num:NumericUpDown}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.1*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" CornerRadius="50"  >
                            <RepeatButton Background="LightSkyBlue" Width="50" Height="50" Content="^"  Name="Part_UpButton"/>
                        </Border>
                        <ContentPresenter Grid.Row="1"></ContentPresenter>
                        <Border Grid.Row="2" CornerRadius="50" >
                            <RepeatButton  Background="LightSkyBlue"  Width="50" Height="50" Content="v"  Name="Part_DownButton"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>